<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_activity_bg"
    android:orientation="vertical">


    <include layout="@layout/public_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:gravity="center">

        <com.zjw.apps3pluspro.view.picker.PickerOneView
            android:id="@+id/pv_add_alarm_hour"
            android:layout_width="70dip"
            android:layout_height="180dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@color/white" />

        <com.zjw.apps3pluspro.view.picker.PickerTwoView
            android:id="@+id/pv_add_alarm_min"
            android:layout_width="70dip"
            android:layout_height="180dip" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_add_alarm_cycle"
        style="@style/public_item1_style"
        android:layout_marginTop="10dip"
        android:background="@color/dialog_bg">

        <TextView
            style="@style/public_text_title2_style"
            android:layout_centerVertical="true"
            android:text="@string/clock_repeat" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_add_alarm_clock_only_one"
                style="@style/alarm_clock"
                android:text="@string/only_once" />

            <TextView
                android:id="@+id/tv_add_alarm_clock_7"
                style="@style/alarm_clock"
                android:layout_marginLeft="3dip"
                android:text="@string/sunday" />

            <TextView
                android:id="@+id/tv_add_alarm_clock_1"
                style="@style/alarm_clock"
                android:layout_marginLeft="3dip"
                android:text="@string/monday" />

            <TextView
                android:id="@+id/tv_add_alarm_clock_2"
                style="@style/alarm_clock"
                android:layout_marginLeft="3dip"
                android:text="@string/tuesday" />

            <TextView
                android:id="@+id/tv_add_alarm_clock_3"
                style="@style/alarm_clock"
                android:layout_marginLeft="3dip"
                android:text="@string/wednesday" />

            <TextView
                android:id="@+id/tv_add_alarm_clock_4"
                style="@style/alarm_clock"
                android:layout_marginLeft="3dip"
                android:text="@string/thursday" />

            <TextView
                android:id="@+id/tv_add_alarm_clock_5"
                style="@style/alarm_clock"
                android:layout_marginLeft="3dip"
                android:text="@string/friday" />

            <TextView
                android:id="@+id/tv_add_alarm_clock_6"
                style="@style/alarm_clock"
                android:layout_marginLeft="3dip"
                android:text="@string/saturday" />


            <ImageView
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_marginLeft="5dip"
                android:background="@drawable/icon_public_right1" />
        </LinearLayout>


    </RelativeLayout>

    <TextView
        style="@style/public_text_company2_style"
        android:layout_margin="10dip"
        android:text="@string/clock_tip_2"
        android:visibility="gone" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <Button
            android:id="@+id/btn_delete_alarm_color"
            style="@style/big_button_stytle"
            android:layout_marginBottom="36dp"
            android:text="@string/delete_alarm_clock" />

    </RelativeLayout>


</LinearLayout>
