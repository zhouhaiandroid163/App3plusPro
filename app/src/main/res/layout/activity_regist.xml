<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_activity_bg"
    android:orientation="vertical">

    <include layout="@layout/public_head" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dip">

            <EditText
                android:id="@+id/et_register_account"
                style="@style/public_edit_account_style"
                android:hint="@string/input_your_mobile_phone" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#1effffff" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_marginTop="12dp">

                <EditText
                    android:id="@+id/et_register_password1"
                    style="@style/public_edit_password_style"
                    android:layout_marginRight="40dip"
                    android:hint="@string/input_your_pas" />

                <CheckBox
                    android:id="@+id/cb_regist_again1"
                    style="@style/MyCheckBox2" />
            </RelativeLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#1effffff" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_marginTop="12dp">

                <EditText
                    android:id="@+id/et_register_password2"
                    style="@style/public_edit_password_style"
                    android:layout_marginRight="40dip"
                    android:hint="@string/set_pas_again" />

                <CheckBox
                    android:id="@+id/cb_regist_again2"
                    style="@style/MyCheckBox2" />
            </RelativeLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#1effffff" />

            <TextView
                style="@style/public_text_company2_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dip"
                android:text="@string/password_lenght" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center"
            android:orientation="vertical"
            android:paddingTop="20dip"
            android:paddingBottom="48dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/privacy_protocol_dialog_content"
                android:textColor="@color/white_50"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_user"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="2dip"
                    android:text="@string/user_protocol_title"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ã€"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_privacy"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="2dip"
                    android:text="@string/privacy_protocol_title"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_regist_ok"
                style="@style/big_button_stytle"
                android:layout_marginTop="38dip"
                android:text="@string/btn_regist" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
