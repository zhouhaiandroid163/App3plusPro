<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_activity_bg"
    android:orientation="vertical">

    <include layout="@layout/public_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/person_info_bg"
        android:gravity="center"
        android:minHeight="220dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="85dip"
            android:layout_height="85dip"
            android:background="@drawable/public_head_yuan">

            <com.zjw.apps3pluspro.view.CircleImageView
                android:id="@+id/iv_handle_friend_head"
                android:layout_width="75dip"
                android:layout_height="75dip"
                android:layout_centerInParent="true"
                android:src="@drawable/default_header" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_handle_fullname"
            style="@style/public_text_title2_style"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="2dp"
            android:text="@string/sleep_gang"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                style="@style/public_text_company2_style"
                android:text="@string/nickname"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_handle_nickname"
                style="@style/public_text_company2_style"
                android:layout_marginLeft="3dip"
                android:text=""

                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical">

            <TextView
                style="@style/public_text_company2_style"
                android:text="@string/app_user_uid"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_handle_fid"
                style="@style/public_text_company2_style"
                android:layout_marginLeft="3dip"
                android:text=""
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl_handle_change_remarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/public_text_title2_style"
                android:text="@string/remarks_name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center|right">

            <TextView
                android:id="@+id/tv_handle_remarks"
                style="@style/public_text_company2_style"
                android:hint="@string/no_set"
                android:text=""
                android:textColor="@color/white_50"
                android:textColorHint="@color/white_50" />
        </LinearLayout>

        <ImageView
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:background="@drawable/icon_right_enable_on" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dip"
        android:gravity="bottom"
        android:paddingBottom="24dp">

        <Button
            android:id="@+id/ll_handle_delete_friend"
            style="@style/big_button_stytle"
            android:layout_marginTop="65dp"
            android:text="@string/delete_friend" />
    </RelativeLayout>


</LinearLayout>
